# Server Configuration
NODE_ENV=production
PORT=5000

# Database URIs - Render provides these automatically for managed databases
MONGO_URI=${RENDER_MONGODB_CONNECTION_STRING}
REDIS_URI=${RENDER_REDIS_CONNECTION_STRING}

# Authentication secrets - Create strong unique values for these
JWT_SECRET=replace_with_strong_secret
REFRESH_TOKEN_SECRET=replace_with_strong_secret

# Payment Gateway Integration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# External Service Integrations
SLACK_WEBHOOK=your_slack_webhook_url
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Security Settings
CORS_ORIGIN=https://influencerhub.onrender.com
ENABLE_RATE_LIMITING=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true

# Monitoring and Logging
LOG_LEVEL=info
