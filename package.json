{
  "name": "influencerhub-platform",
  "version": "1.0.0",
  "description": "InfluencerHUB Platform - A platform connecting influencers and advertisers",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "node test-server-setup.js",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-server && npm run install-client"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillywraps/InfluencerHUB.git"
  },
  "keywords": [
    "influencer",
    "marketing",
    "platform",
    "social-media"
  ],
  "author": "InfluencerHUB Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.8.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "helmet": "^6.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "redis": "^4.7.0",
    "winston": "^3.10.0"
  }
}
